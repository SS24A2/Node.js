<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>STUDENTS</title>
    <style>
        h2 {
            text-align: center;
        }

        nav {
            margin: 30px 0px;
            text-align: center;
        }

        a {
            margin-left: 15px;
            text-decoration: none;
            font-weight: 600;
            color: blue;
        }

        a:hover {
            color: red;
        }

        table {
            text-align: center;
            margin: 5px auto;
            border: 1px solid blue;
        }

        table a {
            font-weight: 500;
        }

        th,
        td {
            border: 1px solid rgb(165, 165, 214);
        }

        th {
            background-color: antiquewhite;
        }

        td {
            background-color: rgb(248, 243, 238);
        }
    </style>
</head>

<body>
    <%- include('./partial') %>

        <table width="50%">
            <tr>
                <% Object.keys(data[0]).forEach(key=>{ %>
                    <th>
                        <%= key[0].toUpperCase().concat(key.slice(1)) %>
                    </th>
                <% }) %>
                    <th>Opcija</th>
            </tr>
            <% data.forEach((student, index)=>{ %>
                <tr>
                    <% Object.keys(data[0]).forEach(key=>{ %>
                        <td>
                            <%= student[key] %>
                        </td>
                     <% }) %>
                        <td><a href="/brishi?i=<%= index %>">Izbrishi</a></td>
                </tr>
            <% }) %>
        </table>
</body>

</html>